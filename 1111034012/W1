#include <stdio.h>
#include <stdlib.h>
#define SIZE 4
#define STU 13

void sort(char **name, int a[][SIZE], int size);

int main(void)
{
    int key,result=0,i,j;
    struct student{
    	char name[20];
    	unsigned int stu_id;
    	int math;
    	int computer;
    	float avg;    	
	};
	//struct student stud[stu];
	typedef struct student stud;
	stud my_stu[STU]={{"Alice",2,98,72,0},
						{"Danny",3,76,32,0},
						{"Tom",6,98,67,0},
						{"Nina",7,89,32,0},
						{"May",8,98,55,0},
						{"Sindy",9,89,32,0},
						{"Steven",10,98,65,0},
						{"Ellen",11,99,32,0},
						{"Nicole",12,98,71,0},
						{"Tan",13,76,91,0},
						{"Jenny",18,93,49,0},
						{"Bob",19,67,82,0},
						{"Tim",20,66,98,0},}; 

    puts("Name ID items in original order");

    for(j=0;j<STU;j++)
    {	
    my_stu[j].avg=(my_stu[j].math+my_stu[j].computer)/2;
	}
    
    for(j=0;j<STU;j++)
    {	printf("%10s", my_stu[j].name);
		printf("%4d", my_stu[j].stu_id);
		printf("%6d", my_stu[j].math);
		printf(" %6d", my_stu[j].computer);
		printf(" %6.2f", my_stu[j].avg);
    	printf("\n");
	}
	puts("Those student who failed the exam??");
	for(j=0;j<STU;j++){
		if(my_stu[j].avg<60){
    	printf("%s",my_stu[j].name);
		}
	}
}
